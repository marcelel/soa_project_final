<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="soa_project">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.agh.edu.server.entity.CategoryType</class>
        <class>com.agh.edu.server.entity.Category</class>
        <class>com.agh.edu.server.entity.ElementType</class>
        <class>com.agh.edu.server.entity.Element</class>
        <class>com.agh.edu.server.entity.Attribute</class>
        <class>com.agh.edu.server.entity.User</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="none" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/soa_project?autoReconnect=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.use_sql_comments" value="false" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        </properties>
    </persistence-unit>
</persistence>
